<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch 
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		">

	<!-- <import resource="../config/database-hsqldb-context.xml" /> --> <!-- External HSQLDB Database -->
	<import resource="../config/database-context.xml" /> <!-- Internal HSQLDB Database -->
	<import resource="../beans/beans.xml" />


	<job id="multithreadstep" xmlns="http://www.springframework.org/schema/batch">
		<step id="step1">
			<!-- SET throttle-limit SAME VALUE concurrencyLimit IN beans.xml-->
			<tasklet task-executor="taskExecutor" throttle-limit="500">
				<!-- batch size -->
				<chunk reader="customReader" writer="customWriter" commit-interval="1" />
			</tasklet>
		</step>
	</job>



</beans>